
<?xml version="1.0" encoding="UTF-8"?>
<ContentBundle
	instanceOf="interpolationTest"
	version="2.0"
	xmlns="http://www.ebay.com/2006/v4/content"
	xmlns:its="http://www.w3.org/2005/11/its"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.ebay.com/2006/v4/content ../../../schema/V4Content2.xsd">

	<!-- Only placeholder -->
	<ContentElement id="myElement1"><DPH id="name"/></ContentElement>

	<!-- Content only before -->
	<ContentElement id="myElement2">Hello, <DPH id="name"/></ContentElement>

	<!-- Content only after -->
	<ContentElement id="myElement3"><DPH id="name"/>!</ContentElement>

	<!-- Content before and after -->
	<ContentElement id="myElement4">Hello, <DPH id="name"/>!</ContentElement>

	<!-- Multiple placeholders -->
	<ContentElement id="myElement5"><DPH id="greeting"/>, <DPH id="name"/>!</ContentElement>

</ContentBundle>