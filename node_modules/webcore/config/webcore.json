{

  "port": ["OPENSHIFT_NODEJS_PORT", "VCAP_APP_PORT", "PORT", 8000],

  "host": ["OPENSHIFT_NODEJS_IP", "VCAP_APP_HOST", "HOST", "IP"],

  "globalAgent": {
      "maxSockets": 250
  },

  "viewEngine": {
    "module": "express-dustjs",
    "ext": "js",
    "templatePath": [".build", "templates"],
    "helpers": null,
    "cache": true
  },

  "i18n": {
      "fallback": "en-US",
      "contentPath": ["locales"]
  },

  "routes": {
    "routePath": ["controllers"]
  }

}
